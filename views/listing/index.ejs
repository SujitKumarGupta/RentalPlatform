<% layout("/layouts/boilerplates") %>
<%- include('./Chatbot/chatbotIcon.ejs') %>

<style>
  #filters {
    display: flex;
    flex-wrap: nowrap; /* Disable wrapping to allow horizontal scrolling */
    align-items: center;
    overflow-x: auto; /* Enable horizontal scrolling */
    gap: 1rem; /* Add space between items */
    padding: 0.5rem; /* Add padding for better spacing */
    scrollbar-width: thin; /* For Firefox */
    scrollbar-color: #ccc transparent; /* For Firefox */
  }

  #filters::-webkit-scrollbar {
    height: 6px; /* Adjust height of the scrollbar */
  }

  #filters::-webkit-scrollbar-thumb {
    background-color: #ccc; /* Scrollbar color */
    border-radius: 10px; /* Rounded scrollbar */
  }

  .filter {
    padding:5px;
    margin: 0; /* Remove extra margins for better alignment */
    text-align: center;
    opacity: 0.7;
    flex: 0 0 auto; /* Prevent shrinking in scrolling */
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  #tax-toggle {
    border: 1px solid black;
    border-radius: 1.5rem;
    height: 3.2rem;
    padding: 1rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
    flex-shrink: 0; /* Prevent shrinking */
  }

  .tax-info {
    display: none;
  }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 767px) {
    #filters {
      gap: 0.5rem; /* Reduce space between filters */
    }

    #tax-toggle {
      margin: 1rem auto; /* Center and adjust spacing */
      width: 90%; /* Adjust width for smaller screens */
      justify-content: center; /* Center the content */
    }
  }

  /* General Card Styling */
  .listing-card {
    margin: 0 auto; /* Center the card horizontally */
  }

  @media (max-width: 767px) {
    .listing-card {
      margin: 1rem auto; /* Add vertical margin for spacing */
      width: 90%; /* Make card responsive */
      max-width: 20rem; /* Maintain a maximum width */
      text-align: center; /* Center-align content inside the card */
    }
  }
</style>

<div id="filters">
  <a href="/listings/filter/Trending" class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>
  <a href="/listings/filter/Rooms" class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
  <a href="/listings/filter/Iconic%20Cities" class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </a>
  <a href="/listings/filter/Mountains" class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>
  <a href="/listings/filter/Castles" class="filter">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </a>
  <a href="/listings/filter/Pools" class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing pools</p>
  </a>
  <a href="/listings/filter/Camping" class="filter">
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </a>
  <a href="/listings/filter/Farms" class="filter">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </a>
  <a href="/listings/filter/Arctic" class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>
  <a href="/listings/filter/Ship" class="filter">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Ship</p>
  </a>
  <a href="/listings/filter/Snow" class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Snows</p>
  </a>
  <div id="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>
  
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-">
  <% for (listing of alllisting) { %>
    <a href="/listings/<%= listing._id %>" class="listings-link">
      <div class="card listing-card" style="width: 22rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="imgs" style="height: 20rem;">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <i class="tax-info">&nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("tax-toggle");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
  });
</script>
